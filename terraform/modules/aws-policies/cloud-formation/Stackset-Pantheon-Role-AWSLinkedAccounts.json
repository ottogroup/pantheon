  "Description": "Pantheon audit access",
  "Outputs": {
    "PantheonServiceAccountId": {
      "Description": "Your External ID",
      "Value": {
        "Ref": "PantheonServiceAccountId"
      }
    },
    "RoleARNID": {
      "Description": "Your Role ARN ID",
      "Value": {
        "Fn::GetAtt": [
          "Role",
          "Arn"
        ]
      }
    }
  },
