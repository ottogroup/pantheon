              "Action": "sts:AssumeRoleWithWebIdentity",
              "Condition": {
                "StringEquals": {
                  "accounts.google.com:sub": {
                    "Ref": "PantheonServiceAccountId"
                  },
                  "accounts.google.com:oaud": "https://www.pantheon.app.ottogroupdata.works"
